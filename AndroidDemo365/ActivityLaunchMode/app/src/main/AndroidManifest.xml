<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afunx.activitylaunchmode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityA"
            android:label="@string/title_activity_activity_a"></activity>
        <activity
            android:name=".activities.ActivityB"
            android:label="@string/title_activity_activity_b"></activity>
        <activity
            android:name=".activities.ActivityC"
            android:label="@string/title_activity_activity_c"></activity>
        <activity
            android:name=".activities.ActivityD"
            android:label="@string/title_activity_activity_d"></activity>

        <activity
            android:name=".activities.ActivitySingeTask"
            android:label="ActivitySingleTask"
            android:launchMode="singleTask"></activity>

        <activity
            android:name=".activities.ActivitySingleInstance"
            android:label="ActivitySingleInstance"
            android:launchMode="singleInstance"></activity>
    </application>

</manifest>
